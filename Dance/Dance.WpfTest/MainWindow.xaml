<Window x:Class="Dance.WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dance="http://schemas.dance.com/wpf"
        xmlns:local="clr-namespace:Dance.WpfTest" 
        xmlns:dock="https://github.com/Dirkster99/AvalonDock"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="White" x:Name="uc"
        Title="MainWindow" Height="800" Width="1400">
    <Grid Background="Transparent">
        <dance:DanceGroupBox x:Name="groupBox" GroupItemsSourcePath="Items" Margin="20">
            <dance:DanceGroupBox.GroupHeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}" Opacity="0.7" FontWeight="Bold"></TextBlock>
                </DataTemplate>
            </dance:DanceGroupBox.GroupHeaderTemplate>
            <dance:DanceGroupBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="Transparent"
                            dance:DanceDragTrigger.DragBeginCommand="{Binding ElementName=uc, Path=DataContext.DragBeginCommand}"
                            dance:DanceDragTrigger.DropCommand="{Binding ElementName=uc, Path=DataContext.DropCommand}">
                        <TextBlock Text="{Binding Path=Name}"></TextBlock>
                    </Border>
                </DataTemplate>
            </dance:DanceGroupBox.ItemTemplate>
            <dance:DanceGroupBox.GroupItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </dance:DanceGroupBox.GroupItemsPanel>
        </dance:DanceGroupBox>
    </Grid>
</Window>
