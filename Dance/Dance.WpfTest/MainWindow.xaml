            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
            <ComboBoxItem>9</ComboBoxItem>
        </ComboBox>

        <ComboBox Width="240" HorizontalAlignment="Left" Margin="300,300,10,10" IsEditable="True">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
            <ComboBoxItem>9</ComboBoxItem>
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
            <ComboBoxItem>9</ComboBoxItem>
        </ComboBox>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Width="200" Margin="0,200,0,0" Background="Yellow" Orientation="Horizontal">
            <TextBlock Text="{Binding ElementName=dg,Path=SelectedValue.Index}" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding ElementName=dg,Path=SelectedValue.Name}" VerticalAlignment="Center" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <Button Width="120" Style="{StaticResource Button_Master}" Content="Master"></Button>

        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,100,20,0" BorderBrush="Red" BorderThickness="1" Visibility="Visible">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <dance:DanceDrawing Width="600" x:Name="drawing" Foreground="Red" FontFamily="Consolas">
                    <dance:DanceDrawingGrid Background="White">
                        <dance:DanceDrawingGrid.RowDefinitions>
                            <RowDefinition Height="120"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </dance:DanceDrawingGrid.RowDefinitions>
                        <dance:DanceDrawingGrid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </dance:DanceDrawingGrid.ColumnDefinitions>
                        <dance:DanceDrawingImage Source="C:\Users\win\Pictures\5.jpeg" Height="60"></dance:DanceDrawingImage>
                        <dance:DanceDrawingStackPanel Grid.Row="1">
                            <dance:DanceDrawingTextBlock x:Name="tb" Text="this is a try." Margin="20,0,0,0"></dance:DanceDrawingTextBlock>
                            <dance:DanceDrawingTextBlock Text="this is a try. 1" Margin="20,0,0,0"></dance:DanceDrawingTextBlock>
                            <dance:DanceDrawingTextBlock Text="this is a try. 2" Margin="20,0,0,0"></dance:DanceDrawingTextBlock>
                            <dance:DanceDrawingTextBlock Text="this is a try. 3" Margin="20,0,0,0"></dance:DanceDrawingTextBlock>
                            <dance:DanceDrawingTextBlock Text="this is a try. 4" Margin="20,0,0,0"></dance:DanceDrawingTextBlock>
                        </dance:DanceDrawingStackPanel>
                        <dance:DanceDrawingQRCoder Grid.Column="1" Code="http://www.baidu.com"></dance:DanceDrawingQRCoder>
                        <dance:DanceDrawingItemsControl x:Name="lb2" Grid.Column="1" Grid.Row="1">
                            <dance:DanceDrawingItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <dance:DanceDrawingGrid>
                                        <dance:DanceDrawingGrid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </dance:DanceDrawingGrid.ColumnDefinitions>
                                        <dance:DanceDrawingTextBlock Text="{Binding Index}"></dance:DanceDrawingTextBlock>
                                        <dance:DanceDrawingTextBlock Text="{Binding Name}" Grid.Column="1"></dance:DanceDrawingTextBlock>
                                        <dance:DanceDrawingTextBlock Text="{Binding Age}" Grid.Column="2"></dance:DanceDrawingTextBlock>
                                    </dance:DanceDrawingGrid>
                                </DataTemplate>
                            </dance:DanceDrawingItemsControl.ItemTemplate>
                        </dance:DanceDrawingItemsControl>
                    </dance:DanceDrawingGrid>
                </dance:DanceDrawing>
            </ScrollViewer>
        </Border>

        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="400" Height="400" Margin="20">
            <dance:DanceDataGrid x:Name="dg" Background="White">
                <dance:DanceDataGrid.Columns>
                    <dance:DanceDataGridColumn Header="Index" Width="100">
                        <dance:DanceDataGridColumn.CellTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock Text="{Binding Path=Index}" VerticalAlignment="Center"></TextBlock>
                                </Border>
                            </DataTemplate>
                        </dance:DanceDataGridColumn.CellTemplate>
                    </dance:DanceDataGridColumn>
                    <dance:DanceDataGridColumn Header="Name" Width="2*">
                        <dance:DanceDataGridColumn.CellTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center"></TextBlock>
                                </Border>
                            </DataTemplate>
                        </dance:DanceDataGridColumn.CellTemplate>
                    </dance:DanceDataGridColumn>
                    <dance:DanceDataGridColumn Header="Age">
                        <dance:DanceDataGridColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Age}" VerticalAlignment="Center"></TextBlock>
                            </DataTemplate>
                        </dance:DanceDataGridColumn.CellTemplate>
                    </dance:DanceDataGridColumn>
                </dance:DanceDataGrid.Columns>
            </dance:DanceDataGrid>
        </Border>

        <dance:DancePagination Width="600" VerticalAlignment="Bottom" Height="60" PageTotal="50" AllowGoto="True"></dance:DancePagination>
    </Grid>
</Window>
