<Window x:Class="Dance.WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dance="http://schemas.dance.com/wpf"
        xmlns:local="clr-namespace:Dance.WpfTest" 
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="White"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <TabControl>
            <TabItem Header="1"></TabItem>
            <TabItem Header="2"></TabItem>
            <TabItem Header="3"></TabItem>
            <TabItem Header="4"></TabItem>
            <TabItem Header="1"></TabItem>
            <TabItem Header="2"></TabItem>
            <TabItem Header="3"></TabItem>
            <TabItem Header="4"></TabItem>
        </TabControl>

        <ListBox Width="240" HorizontalAlignment="Left" Margin="0,200,0,0">
            <ListBoxItem>1</ListBoxItem>
            <ListBoxItem>2</ListBoxItem>
            <ListBoxItem>3</ListBoxItem>
            <ListBoxItem>4</ListBoxItem>
            <ListBoxItem>5</ListBoxItem>
            <ListBoxItem>1</ListBoxItem>
            <ListBoxItem>2</ListBoxItem>
            <ListBoxItem>3</ListBoxItem>
            <ListBoxItem>4</ListBoxItem>
            <ListBoxItem>5</ListBoxItem>
            <ListBoxItem>1</ListBoxItem>
            <ListBoxItem>2</ListBoxItem>
            <ListBoxItem>3</ListBoxItem>
            <ListBoxItem>4</ListBoxItem>
            <ListBoxItem>5</ListBoxItem>
        </ListBox>

        <dance:DanceDataGrid x:Name="dg" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="600" Height="400" Margin="20">
            <dance:DanceDataGrid.Columns>
                <dance:DanceDataGridColumn Header="Name">
                    <dance:DanceDataGridColumn.CellTemplate>
                        <DataTemplate>
                            <Border>
                                <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center"></TextBlock>
                            </Border>
                        </DataTemplate>
                    </dance:DanceDataGridColumn.CellTemplate>
                </dance:DanceDataGridColumn>
                <dance:DanceDataGridColumn Header="Age">
                    <dance:DanceDataGridColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Age}" VerticalAlignment="Center"></TextBlock>
                        </DataTemplate>
                    </dance:DanceDataGridColumn.CellTemplate>
                </dance:DanceDataGridColumn>
            </dance:DanceDataGrid.Columns>
        </dance:DanceDataGrid>
    </Grid>
</Window>
